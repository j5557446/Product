<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 產品管理系統</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
        body {
            background-image: url('@Url.Content("~/images/white.jpg")');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand">政宇會員產品管理系統</span>
                @*@Html.ActionLink("政宇會員產品管理系統", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("類別管理", "Index", "Category")</li>
                    <li>@Html.ActionLink("類別新增", "Create", "Category")</li>
                    <li>@Html.ActionLink("產品管理", "Index", "Product")</li>
                    <li>@Html.ActionLink("產品新增", "Create", "Product")</li>
                    <li>@Html.ActionLink("會員管理", "Index", "Member")</li>
                    <li>@Html.ActionLink("會員新增", "Create", "Member")</li>
                    <li>@Html.ActionLink("產品資料統計分析表", "Bar", "Draw")</li>
                    <li>@Html.ActionLink("說明文件", "DownloadFile", "Home")</li>
                    <li>@Html.ActionLink("登出", "Index", "Logout")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 政宇資訊科技股份有限公司</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>